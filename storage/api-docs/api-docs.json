{
    "openapi": "3.0.0",
    "info": {
        "title": "CDD App ERP - API",
        "description": "API REST para el sistema de gestión empresarial CDD App ERP. Utiliza autenticación basada en sesión (cookies) para solicitudes desde el frontend, y Bearer tokens para solicitudes desde clientes externos.",
        "contact": {
            "name": "Soporte Técnico",
            "email": "soporte@asistenciavircom.com"
        },
        "license": {
            "name": "Propietario",
            "url": "https://asistenciavircom.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api",
            "description": "API Server"
        }
    ],
    "paths": {
        "/health": {
            "get": {
                "tags": [
                    "Sistema"
                ],
                "summary": "Verificar estado del sistema",
                "description": "Endpoint para verificar que la API está funcionando correctamente",
                "operationId": "healthCheck",
                "responses": {
                    "200": {
                        "description": "Sistema funcionando correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "API funcionando correctamente"
                                        },
                                        "data": {
                                            "properties": {
                                                "version": {
                                                    "type": "string",
                                                    "example": "1.0.0"
                                                },
                                                "timestamp": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SuccessResponse": {
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "message": {
                        "type": "string",
                        "example": "Operación exitosa"
                    },
                    "data": {
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "ErrorResponse": {
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": false
                    },
                    "message": {
                        "type": "string",
                        "example": "Error en la operación"
                    }
                },
                "type": "object"
            },
            "PaginationMeta": {
                "properties": {
                    "current_page": {
                        "type": "integer",
                        "example": 1
                    },
                    "last_page": {
                        "type": "integer",
                        "example": 10
                    },
                    "per_page": {
                        "type": "integer",
                        "example": 15
                    },
                    "total": {
                        "type": "integer",
                        "example": 150
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "http",
                "description": "Ingresa el token de autenticación en formato: Bearer token",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Sistema",
            "description": "Sistema"
        }
    ]
}