# ============================================
# CDD - Sistema de Gestión Empresarial
# Archivo de configuración de ejemplo
# ============================================
# Copia este archivo como .env y configura tus valores

# ===== APLICACIÓN =====
APP_NAME="CDD Sistema"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Mexico_City
APP_URL=http://localhost:8000

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_MX

APP_MAINTENANCE_DRIVER=file

# ===== RENDIMIENTO =====
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ===== LOGGING =====
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===== BASE DE DATOS (PostgreSQL) =====
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=cdd
DB_USERNAME=tu_usuario
DB_PASSWORD=tu_contraseña_segura

# Alternativa SQLite (desarrollo rápido):
# DB_CONNECTION=sqlite
# DB_DATABASE=/ruta/a/database.sqlite

# ===== SESIÓN =====
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ===== SISTEMA DE ARCHIVOS =====
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public

# ===== COLAS =====
# Desarrollo: sync | Producción: database
QUEUE_CONNECTION=sync

# ===== CACHE =====
CACHE_STORE=database
CACHE_PREFIX=cdd_app

# ===== REDIS (opcional) =====
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===== CORREO ELECTRÓNICO =====
MAIL_MAILER=smtp
MAIL_HOST=smtp.ejemplo.com
MAIL_PORT=587
MAIL_USERNAME=tu_usuario_smtp
MAIL_PASSWORD=tu_contraseña_smtp
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@tudominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===== AWS (opcional) =====
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===== FRONTEND =====
VITE_APP_NAME="${APP_NAME}"

# ===== SANCTUM (SPA/API) =====
SANCTUM_STATEFUL_DOMAINS=localhost:8100,localhost

# ===== BACKUPS =====
BACKUP_DISK=local
BACKUP_PATH=backups/database/
BACKUP_COMPRESSION=true
BACKUP_CLEANUP_ENABLED=true
BACKUP_CLEANUP_DAYS=30
BACKUP_SCHEDULE_ENABLED=false
BACKUP_SCHEDULE_FREQUENCY=daily
BACKUP_SCHEDULE_TIME=02:00

# ===== FACTURACIÓN ELECTRÓNICA (opcional) =====
# FACTURALO_BASE_URL=https://api.facturacion.com/rest
# FACTURALO_APIKEY=tu_api_key
# CSD_CER_PEM=/ruta/a/certificado.cer.pem
# CSD_KEY_PEM=/ruta/a/llave.key.pem
# CSD_KEY_PASSWORD=contraseña_csd

# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN
# Descomenta y ajusta para VPS/Hosting
# ============================================
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://tudominio.com
# 
# QUEUE_CONNECTION=database
# CACHE_STORE=redis  (si tienes Redis disponible)
# 
# Para bases de datos con SSL:
# DB_SSLMODE=require
# DB_SSLROOTCERT=/ruta/ca-certificate.crt

# ============================================
# PASARELAS DE PAGO
# ============================================

# ===== PAYPAL =====
# Modo: sandbox (desarrollo) o live (producción)
PAYPAL_MODE=sandbox
# Sandbox: https://developer.paypal.com/ -> My Apps & Credentials -> Sandbox
# Live: https://developer.paypal.com/ -> My Apps & Credentials -> Live
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=

# ===== MERCADOPAGO =====
# https://www.mercadopago.com.mx/developers/panel
# Usar "Credenciales de prueba" para desarrollo
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_ACCESS_TOKEN=

# ===== STRIPE (Tarjeta de Crédito) =====
# https://dashboard.stripe.com/test/apikeys para desarrollo
# https://dashboard.stripe.com/apikeys para producción
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ===== CONFIGURACIÓN GENERAL DE PAGOS =====
PAYMENT_CURRENCY=MXN
PAYMENT_SUCCESS_URL=/contratacion/exito
PAYMENT_CANCEL_URL=/contratacion/cancelado
PAYMENT_PAYPAL_ENABLED=true
PAYMENT_MERCADOPAGO_ENABLED=true
PAYMENT_STRIPE_ENABLED=true

